import { useAppStore } from './store/appStore';
import BottomNavigation from './components/BottomNavigation';
import MemoriesTab from './pages/MemoriesTab';
import ChatTab from './pages/ChatTab';
import CommunityFeedTab from './pages/CommunityFeedTab';
import AIMarketplaceTab from './pages/AIMarketplaceTab';
import SettingsTab from './pages/SettingsTab';

function App() {
  const { currentTab } = useAppStore();

  const renderCurrentTab = () => {
    switch (currentTab) {
      case 'memories':
        return <MemoriesTab />;
      case 'chat':
        return <ChatTab />;
      case 'feed':
        return <CommunityFeedTab />;
      case 'marketplace':
        return <AIMarketplaceTab />;
      case 'settings':
        return <SettingsTab />;
      default:
        return <MemoriesTab />;
    }
  };

  return (
    <div className="min-h-screen bg-gray-50">
      {renderCurrentTab()}
      <BottomNavigation />
    </div>
  );
}

export default App;